{
  "name": "shinymas-client",
  "description": "アイドルマスター シャイニーカラーズ 非公式クライアント",
  "main": "src/main.js",
  "author": "panakuma",
  "version": "0.0.5",
  "scripts": {
    "start": "electron ./src",
    "build_win": "electron-packager ./ shinymas-client --platform=win32 --arch=all --out=../shinymas-client-build/win32 --icon=./img/Windows.ico",
    "build_mac": "electron-packager ./ shinymas-client --platform=darwin --arch=all --out=../shinymas-client-build/mac --icon=./img/shinymas.icns",
    "build_linux": "electron-packager ./src shinymas-client --platform=linux --arch=all --out=../shinymas-client-build/linux --icon=./img/shinymas.ico"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/panakuma/shinymas-client.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/panakuma/shinymas-client/issues"
  },
  "homepage": "https://github.com/panakuma/shinymas-client#readme",
  "devDependencies": {
    "electron": "~9",
    "electron-packager": "*"
  },
  "dependencies": {}
}
